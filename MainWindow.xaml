<Window x:Class="ProjectManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagementSystem"
        xmlns:viewmodels="clr-namespace:ProjectManagementSystem.ViewModel"
        xmlns:views="clr-namespace:ProjectManagementSystem.View"
        mc:Ignorable="d"
        Title="Project Management System" Height="750" Width="1300">
    <Window.Resources>
        <DataTemplate x:Name="projectViewTemplate" DataType="{x:Type viewmodels:ProjectViewModel}">
            <views:ProjectView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome to the Project Management System!" HorizontalAlignment="Center" FontSize="64" Grid.Row="0" Grid.ColumnSpan="6"/>
        <TextBlock Text="Please click continue below to start adding your projects to the system" HorizontalAlignment="Center" FontSize="64" TextWrapping="Wrap" Grid.Row="1" Grid.ColumnSpan="6"/>
        <Button Content="Continue" FontSize="32" Click="Continue_Clicked" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Height="100" Width="300"/>


        <ContentControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Grid.RowSpan="3" Content="{Binding}"/>
    </Grid>
</Window>
